                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19dp"
                    android:background="@drawable/drawable_rounded_green"
                    android:textAlignment="center"
                    android:text=" 90%" />

                <TextView
                    android:id="@+id/hum_sre"
                    android:layout_width="match_parent"
