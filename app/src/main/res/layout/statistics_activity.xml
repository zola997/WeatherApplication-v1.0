                android:textSize="19dp"
                android:clickable="true"
                android:background="@drawable/drawable_rounded_green"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Petak"
                android:textSize="19dp"
                android:clickable="true"
                android:background="@drawable/drawable_rounded_green"
                android:onClick="onClick"
